                            <script>
                                // searchBox 컨트롤
                                var searchBoxControl = {
                                    init: function(element){
                                        var searchBox = document.querySelectorAll(element)[0];
                                        var searchBoxInput = document.querySelectorAll(element + ' > input')[0];
                                        var deem = document.querySelectorAll(element + '> .deem')[0];
                                        searchBoxInput.addEventListener('focusin',focusin);
                                        function focusin(e){
                                            e.target.closest('.searchBox-a').classList.add('open');
                                        }
                                        searchBoxInput.addEventListener('keyup',combo_keyup);
                                        function combo_keyup(e){
                                            var searchBox = e.target.closest('.searchBox-a');
                                            if(e.target.value.length > 0){
                                                searchBox.classList.add('open');
                                            }else{
                                                searchBox.classList.remove('open');
                                            }
                                        }
                                        deem.addEventListener('click',function(e){
                                            e.target.closest(element).classList.remove('open');
                                        })
                                    }
                                }
                                searchBoxControl.init('#searchBox');
                            </script>
