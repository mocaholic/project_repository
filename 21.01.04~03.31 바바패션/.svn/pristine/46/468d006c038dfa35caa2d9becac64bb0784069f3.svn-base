<script>
    $(document).ready(function(){
        /* 카테고리 tab 메뉴 더보기 버튼 */
        $('.category-tab .btn-more').click(function(){
            if($(this).hasClass('on') === true) {
                $(this).removeClass('on');
                $('.ctgr-menu').css('height','33px');
            } else {
                $(this).addClass('on');
                $('.ctgr-menu').css('height','76px');
            }
        });
    });  
</script>
