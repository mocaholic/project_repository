/* 통합검색 */
.search-layer {position:absolute; top:0; left:0; width:100%; z-index:20; background:#fff; padding:60px 0 40px; border-radius:0 0 50px 50px;}
.search-layer .btn-lyclose {position:absolute; top:75px; right:60px; background:url('../img/btn_search_closed.png') no-repeat; width:30px; height:30px; text-indent:-9999px;}
.search-layer .layer-wrap {width:1320px; margin:0 auto;}
.search-layer .layer-wrap .w-full::after {display:block; content:""; clear:both;}
.search-layer .search-wrap {width:700px; height:60px; margin:0 auto; background:#e9e9e9; position:relative; border-radius:30px; margin-bottom:50px;}
.search-layer .search-wrap input {margin-left:28px; background:none; font-size:22px; border:none; line-height:2.72; font-weight:300; width:calc(100% - 100px); box-sizing:border-box;}
.search-layer .search-wrap button {position:absolute; top:0; right:0; text-indent:-9999px; width:60px; height:60px; background:#333 url('../img/icon_search.png') no-repeat center center; border-radius:50%;}
.search-layer .bef, 
.search-layer .aft {padding:0 46px; min-height:428px;}
.search-layer .bef .w-full > .w-half {width:500px; float:left;}
.search-layer .bef .w-full > .w-half + .w-half {width:624px; margin-left:104px;}
.search-layer .bef .w-full + .w-full {margin-top:35px}

.search-layer .sch-tit {font-size:18px; margin-bottom:20px; position:relative;}
.search-layer .prd-unit {display:flex; justify-content:space-between;}
.search-layer .unit-title {font-size:18px; font-weight:700; margin-bottom:15px;}
.search-layer .unit-box {width:292px;}

.search-layer .banner-slide {height:120px; margin-top:60px;}
.search-layer .banner-slide img {height:100%;}
.search-layer .banner-slide .swiper-pagination {left:0; bottom:14px; width:100%; font-size:12px; color:#c7c7c7;}
.search-layer .banner-slide .swiper-pagination .swiper-pagination-current {font-weight:700; color:#fff;}

.recent-sch {position:relative;}
.recent-sch .btn-group {position:absolute; top:2px; left:125px;}
.recent-sch .btn-group button {font-size:12px; color:#999;}
.recent-sch .rec-list a {display:inline-block; position:relative; font-size:14px; color:#666; text-decoration:none; margin:0 20px 15px 0; padding-right:20px;}
.recent-sch .rec-list a > button {text-indent:-9999px; position:absolute; top:3px; right:0; background:url('../img/btn_delete.png') no-repeat; width:9px; height:9px; margin-left:10px;}
.trend-tag .tag-list a {display:inline-block; font-size:14px; color:#666; margin:0 25px 15px 0; text-decoration:none;}

.soar-kwd .date {font-size:12px; color:#999; font-weight:400; position:absolute; top:4px; right:0;}
.soar-kwd .list {display:flex; justify-content:space-between; margin-top:-6px;}
.soar-kwd ul {width:230px;}
.soar-kwd ul li {padding-top:19px; border-bottom:1px solid #dedede; width:100%; position:relative; height:51px;}
.soar-kwd ul li a {display:block; color:#111; text-decoration:none; padding-right:30px;}
.soar-kwd ul li strong {display:inline-block; width:36px; padding-left:4px;}
.soar-kwd ul li span {font-size:10px; color:#111; width:30px; position:absolute; top:19px; right:3px; text-align:center;}
.soar-kwd ul li span:before {display:inline-block; content:""; width:8px; height:1px; background:#111;}
.soar-kwd ul li span.up {color:#fc2264; top:21px;}
.soar-kwd ul li span.up:before {width:10px; height:8px; background:url('../img/icon_up.png') no-repeat; margin-right:7px;}
.soar-kwd ul li span.down {top:22px;}
.soar-kwd ul li span.down:before {width:10px; height:8px; background:url('../img/icon_down.png') no-repeat; margin-right:7px;}
.soar-kwd ul li span.new {font-weight:500; top:22px;}
.soar-kwd ul li span.new:before {display:none;}

.brand-slide ul li a {display:block; text-decoration:none;}
.brand-slide .brand-box {padding:20px; border:1px solid #e9e9e9;}
.brand-slide .brand-box .top {display:flex; justify-content:space-between; align-items:center;}
.brand-slide .brand-box .top .brd-name {font-size:18px; color:#111; font-weight:900;}
.brand-slide .brand-box .top .brd-name .tx-eng {font-size:10px; font-weight:500; display:block; margin:3px 0 5px;}
.brand-slide .brand-box .top .brd-logo {width:35px; height:35px; border-radius:50%;}
.brand-slide .brand-box .brd-tx {font-size:12px; color:#111; font-weight:300; margin:9px 0 10px;}
.brand-slide .brand-box .brd-img {margin-right:-20px;}
.brand-slide .brand-box .brd-img > img {display:block;}
.brand-slide .swiper-wrap .swiper-button-prev,
.brand-slide .swiper-wrap .swiper-button-next {top:156px; transform: translateY(0);}
.brand-slide .swiper-wrap .swiper-button-prev {left:20px;}
.brand-slide .swiper-wrap .swiper-container{padding-bottom:20px;}

.prd-slide .prd-unit.horizontal.sm .prd-list.thum .prd-info{padding-top:6px;}
.prd-slide .swiper-container {padding-bottom:30px;}
.banner-slide.swiper-wrap .swiper-container {padding-bottom:0;}

.auto-comp .auto-list a {display:inline-block; color:#111; margin-right:15px; margin-bottom:10px; text-decoration:none;}
.auto-comp .auto-list a > span {color:#fc2264;}

.recomm-category  {margin-top:40px;}
.recomm-category ul {display:flex; align-items:center; }
.recomm-category ul li {width:50%;}
.recomm-category ul li a {color:#111; text-decoration:none;}

.recomm-prd{margin-top:50px;}
.recomm-prd .prd-list li {width:409px;}
.recomm-prd .prd-list .name .tx-ovf {width:240px;}
