<script>
    /*publishing UI only*/         
    $('.tooltip').find('.btn-tooltip').on('click', function(){
        $(this).toggleClass('on')
    }); // tooltip toggle Class
    $('.tooltip').find('.btn-closed').on('click', function(){
        $(this).closest('.tooltip').find('.btn-tooltip').removeClass('on')
    }); // tooltip Closed

    /* swiper */
    var galleryThumbs = new Swiper('.thumbs-img', {
        slidesPerView: 5,
        spaceBetween: 14,
        freeMode: true,
        /* watchSlidesVisibility: true, */
        watchSlidesProgress: true,
    });

    var galleryTop = new Swiper('.big-img', {    
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
        thumbs: {
            swiper: galleryThumbs
        }
    });
</script>
