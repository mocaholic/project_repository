            period.find('.btn.sm').removeClass('primary');
            $(this).addClass('primary');
        });//period click event
        $('#datePickInput-start').datepicker({
            dateFormat: 'yy-mm-dd',
            showOn: 'both',
            buttonImage: '../../img/icon_calendar.png',
            buttonImageOnly: true,
        }); // datepicker
        $('#datePickInput-end').datepicker({
            dateFormat: 'yy-mm-dd',
            showOn: 'both',
            buttonImage: '../../img/icon_calendar.png',
            buttonImageOnly: true
        }); // datepicker
