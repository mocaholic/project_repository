.sch-brand.type2 span {position:absolute; top:40px; left:40px; font-size:20px; background:#111; border-radius:10px; padding:10px 20px; color:#fff; z-index:3;}

.hot-sale {margin-top:120px;}
.hot-sale .tab-a li a {font-size:30px; padding-bottom:15px; color:#111; font-weight:400;}
