/* 공통 */
aside {display:block;}
.num {font-family:'Montserrat';}
.underline {text-decoration:underline;}
.skip-txt {text-indent:-9999px; font-size:0;}
.btn.primary2 {background:#111; color:#fff; border:none;}

.layerPop .w-400 {width:400px;}

.aside-wrap {position:absolute; top:105px; right:0; /* width:350px; */}

.n-mem-txt {width:280px; margin:0 auto 30px;}
.n-mem-txt.bd-top {border-top:1px solid #111; padding-top:30px; margin-top:30px;}
.n-mem-txt p {font-size:16px; line-height:1.375; word-break:keep-all;}
.n-mem-txt a {display:block; text-align:right; font-size:16px; color:#fc2264;}

.prd-list.cart .prd-img {position:relative;}
.prd-list.cart .v-bottom {position:relative;}
.prd-list.cart .cart-row > *:first-child {width:313px;}  /* soldout 버튼 추가시 레이아웃 깨짐 */

.checkbox.type2 :checked + label::before {background-position-x:-20px}


/* 카테고리 tab */
.ctgr-menu {display:flex; flex-wrap:wrap; height:33px; overflow:hidden;}
.ctgr-menu li {margin-right:10px; margin-bottom:10px;}
.ctgr-menu li a {display:inline-block; font-size:14px; line-height:33px; border:1px solid #eee; border-radius:6px; text-align:center; height:33px; padding:0 14px; background:#fff;}
.ctgr-menu li.on a {background:#111; color:#fff; border-color:#111;}

/* 해시태그 list */
.hashtag-list {}
.hashtag-list a {display:inline-block; font-size:14px; line-height:33px; border:1px solid #eee; border-radius:6px; text-align:center; height:33px; padding:0 14px; background:#fff; margin-right:2px; margin-bottom:5px;}

/* header */
header {padding:30px 0 41px;}
.header-top {display:flex; justify-content:space-between; align-items:center;}
.header-top .logo {}
.header-top .search-wrap {background:#f5f5f5; border-radius:100px; width:420px; height:40px; padding:7px 20px 9px; box-sizing:border-box; margin-left:150px;}
.header-top .search-wrap input {border:none; background:none; line-height:1.7; width:calc(100% - 72px)}
.header-top .search-wrap .btn-search {text-indent:-9999px;}
.header-top .util-menu {display:flex; justify-content:flex-end; align-items:center;}
.header-top .util-menu li {margin-left:20px;}
.header-top .util-menu li a {font-size:12px; color:#111; line-height:1.5; text-decoration:none;}
.header-top .util-menu li a .badge {display:inline-block; width:16px; height:16px; background:#fc2264; margin-left:2px; padding:0 5px; border-radius:50%; font-size:11px; color:#fff; vertical-align:1px;}
.header-gnb {display:flex; margin-top:41px; position:relative;}
.header-gnb ul {display:flex;}
.header-gnb ul li + li {margin-left:30px;}
.header-gnb ul li a {font-size:18px; color:#111; text-decoration:none; line-height:1.22;}
.header-gnb .category-wrap li a {font-weight:500;}
.header-gnb nav {margin-left:60px;}
.header-gnb ul li a.premium {color:#a38853; font-weight:700;}
.header-gnb .category-wrap .depth2, 
.header-gnb .gnb-menu li > div {display:none;}
.btn-category-menu {position:absolute; bottom:0; right:0;}


