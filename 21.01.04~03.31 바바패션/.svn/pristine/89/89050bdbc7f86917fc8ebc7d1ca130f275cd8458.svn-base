    <footer></footer>
</body>
<script>
    $(document).ready(function(){
        /*publishing UI only*/
        $('.radio-list').find('li').on('click', function(){
            $('.radio-list').find('li').removeClass('on');
            $(this).addClass('on');
            var name = $(this).find('input[type=radio]').attr('name');
            $('.radio-list').find('input[name='+name+']').prop('checked', false);
            $(this).find('input[name='+name+']').prop('checked', true);
        }); // radio sample
    });  
</script>
</html>