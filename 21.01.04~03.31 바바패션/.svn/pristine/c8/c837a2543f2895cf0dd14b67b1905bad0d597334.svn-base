.n-mem-txt {width:280px; margin:0 auto 30px;}
.n-mem-txt.bd-top {border-top:1px solid #111; padding-top:30px; margin-top:30px;}
.n-mem-txt p {font-size:16px; line-height:1.375; word-break:keep-all;}
.n-mem-txt a {display:block; text-align:right; font-size:16px; color:#fc2264;}

.prd-list.cart .prd-img {position:relative;}
