<script>    
    $(document).ready(function(){
        $('.btn-alarm').on('click', function(){
            if($(this).hasClass('active')){
                $(this).removeClass('active').text('알림해제');
            } else {
                $(this).addClass('active').text('알림받기');
            }
        });
    });
    var swiperLive = new Swiper('.babalive-now .swiper-container', {
            scrollbar: {
                el: '.babalive-now .swiper-scrollbar',
                dragSize: '200px',
            },
            slidesPerView: 4,
            spaceBetween: 20,
            navigation: {
                nextEl: '.babalive-now .swiper-button-next',
                prevEl: '.babalive-now .swiper-button-prev',
            },
        });
</script>
