          infiniteLoop : false, hideControlOnEnd : true, responsive : true,
          onSliderLoad : function() {
            for (var i = 0; i < $('.bx-pager > .bx-pager-item').length; i++) {
              $('.bx-pager > .bx-pager-item').eq(i).find('> a').html(year[i]);
            }
          },
          onSliderResize : function() {
            for (var i = 0; i < $('.bx-pager > .bx-pager-item').length; i++) {
              $('.bx-pager > .bx-pager-item').eq(i).find('> a').html(year[i]);
            }
          }
